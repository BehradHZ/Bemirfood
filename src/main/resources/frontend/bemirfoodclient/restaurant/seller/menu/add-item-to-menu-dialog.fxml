<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="frontend.bemirfoodclient.controller.restaurant.seller.menu.AddItemToMenuDialogController"
            minHeight="600.0" minWidth="600.0">
    <content>
        <VBox alignment="TOP_CENTER" spacing="10">
            <BorderPane.margin>
                <Insets top="30"/>
            </BorderPane.margin>
            <Label text="All Restaurant Items" style="-fx-font-size: 24; -fx-font-weight: bold"/>
            <Label text="select items you want to add to this menu:" style="-fx-font-size: 16"/>
            <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent">
                <VBox fx:id="itemListVBox" spacing="15"/>
            </ScrollPane>
        </VBox>
    </content>

</DialogPane>
